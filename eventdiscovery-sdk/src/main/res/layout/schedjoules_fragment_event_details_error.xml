<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fitsSystemWindows="true"
                android:background="@android:color/white"
                tools:context=".eventdetails.EventDetailActivity"
                tools:ignore="MergeRootFrame">

            <include
                    android:id="@+id/schedjoules_details_header"
                    layout="@layout/schedjoules_details_header"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior"
                            android:animateLayoutChanges="true">


                <TextView
                        android:id="@android:id/message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/schedjoules_generic_error"/>

            </RelativeLayout>

        </android.support.design.widget.CoordinatorLayout>

        <include layout="@layout/schedjoules_powered_by_footer"/>

    </LinearLayout>
</layout>