<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/schedjoules_activity_horizontal_margin"
            android:paddingRight="@dimen/schedjoules_activity_horizontal_margin_with_icon_padding_inset">

        <TextView
                android:id="@+id/schedjoules_venue_name_icon_anchor"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:drawablePadding="@dimen/schedjoules_event_details_item_icon_and_text_distance"
                android:gravity="center_vertical"
                android:textSize="@dimen/schedjoules_event_details_venue_name_text_size"
                android:fontFamily="@string/schedjoules_font_medium"
                android:text=""/>

        <TextView
                android:id="@+id/schedjoules_venue_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:minHeight="@dimen/schedjoules_event_details_item_height"
                android:drawablePadding="@dimen/schedjoules_event_details_item_icon_and_text_distance"
                android:gravity="center_vertical"
                android:layout_alignBaseline="@id/schedjoules_venue_name_icon_anchor"
                android:textSize="@dimen/schedjoules_event_details_venue_name_text_size"
                android:fontFamily="@string/schedjoules_font_medium"
                android:textColor="?android:attr/textColorPrimary"/>

    </RelativeLayout>
</layout>