<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@android:color/white"
            tools:context=".framework.activities.MicroFragmentHostActivity"
            tools:ignore="MergeRootFrame">

        <include
                android:id="@+id/schedjoules_details_header"
                layout="@layout/schedjoules_details_header"/>


        <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/schedjoules_event_detail_container"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <com.schedjoules.eventdiscovery.framework.microfragments.eventdetails.fragments.views.HorizontalActionsView
                        android:id="@+id/schedjoules_event_horizontal_actions"
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                    <LinearLayout
                            android:id="@+id/schedjoules_event_horizontal_actions_holder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:visibility="visible"/>

                    <View
                            android:id="@+id/schedjoules_event_details_divider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/schedjoules_divider"/>
                </com.schedjoules.eventdiscovery.framework.microfragments.eventdetails.fragments.views.HorizontalActionsView>


                <LinearLayout
                        android:id="@+id/schedjoules_event_detail_vertical_items"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="12dp"/>

                <View
                        android:id="@+id/schedjoules_footer_placeholder"
                        android:visibility="invisible"
                        android:layout_height="24dp"
                        android:layout_width="match_parent"/>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <!-- Note, adding layout_width and layout_height is mandatory, otherwise the other attributes won't take effect -->
        <include layout="@layout/schedjoules_powered_by_footer"
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 app:layout_anchor="@id/schedjoules_footer_placeholder"
                 app:layout_anchorGravity="bottom|center_horizontal"
                 app:layout_behavior="com.schedjoules.eventdiscovery.framework.widgets.FooterBehavior"/>

    </android.support.design.widget.CoordinatorLayout>
</layout>
