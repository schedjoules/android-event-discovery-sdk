<!-- TODO rename back to "schedjoules_event_list" when two pane mode is supported -->

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:baselineAligned="false"
            android:divider="?android:attr/dividerHorizontal"
            android:orientation="horizontal"
            android:showDividers="middle"
            tools:context=".framework.eventlist.EventListActivity">

        <!--
        This layout is a two-pane layout for the Events
        master/detail flow.

        -->

        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:tools="http://schemas.android.com/tools"
                                                android:id="@+id/schedjoules_event_list"
                                                android:name=".list.EventListFragment"
                                                android:layout_width="@dimen/schedjoules_item_width"
                                                android:layout_height="match_parent"
                                                android:layout_marginLeft="16dp"
                                                android:layout_marginRight="16dp"
                                                app:layoutManager="LinearLayoutManager"
                                                tools:context=".framework.eventlist.EventListActivity"
                                                tools:listitem="@layout/schedjoules_list_item_event"/>

        <FrameLayout
                android:id="@+id/schedjoules_event_detail_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                tools:ignore="InconsistentLayout"/>

    </LinearLayout>
</layout>
