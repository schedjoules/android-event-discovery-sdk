<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SchedJoules_AppTheme.AppBarOverlay.Dark"
            parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="SchedJoules_AppTheme.PopupOverlay"
            parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SchedJoules_ExpandedTitle"
            parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">26sp</item>
    </style>

    <!-- Needed to override toolbar style fix bug of small title in landscape (theme resource sets it 14sp in land)
    See: http://stackoverflow.com/a/28056935/4247460 -->
    <style name="SchedJoules_ToolbarTitle"
            parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/schedjoules_toolbar_title_font_size</item>
    </style>

    <style name="SchedJoules_Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/divider</item>
    </style>

    <style name="SchedJoules_Divider.Bottom">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="SchedJoules_Divider.Center">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
