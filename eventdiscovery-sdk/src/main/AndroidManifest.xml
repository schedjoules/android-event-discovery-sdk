<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.schedjoules.eventdiscovery">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application>
        <activity
                android:name="com.schedjoules.eventdiscovery.eventlist.EventListActivity"
                android:theme="@style/SchedJoules_AppTheme.NoActionBar"
                android:exported="false"
                android:enabled="true"
                android:label="@string/schedjoules_title_event_list">
            <intent-filter>
                <action android:name="schedjoules.intent.action.EVENT_DISCOVERY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>


        <activity
                android:name=".proxies.DeeplinkEventDetailsProxy"
                android:label="Event details"
                android:exported="true"
                android:enabled="true"
                android:theme="@android:style/Theme.NoDisplay">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                        android:scheme="https"
                        android:host="web.schedjoules.com"
                        android:pathPattern="/events/.*"/>
            </intent-filter>
        </activity>


        <activity
                android:name="com.schedjoules.eventdiscovery.eventdetails.EventDetailActivity"
                android:label=""
                android:exported="false"
                android:enabled="true"
                android:theme="@style/SchedJoules_AppTheme.NoActionBar">
        </activity>

        <activity
                android:name=".proxies.DefaultAddToCalendarActivity"
                android:exported="false"
                android:theme="@android:style/Theme.NoDisplay"
                android:enabled="true">
            <intent-filter android:priority="-999">
                <action android:name="schedjoules.event.intent.action.ADD_TO_CALENDAR"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <service
                android:name=".service.BasicInsightsService"
                android:exported="false"
                android:stopWithTask="true"
                android:enabled="true"/>

        <service
                android:name=".service.BasicActionsService"
                android:exported="false"
                android:stopWithTask="true"
                android:enabled="true">
            <intent-filter>
                <action android:name="com.schedjoules.ACTIONS"/>
            </intent-filter>
        </service>

        <meta-data
                android:name="com.schedjoules.eventdiscovery.common.OurGlideModule"
                android:value="GlideModule"/>

    </application>

</manifest>
